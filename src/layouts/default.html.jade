- var scripts = getBlock("scripts")
- var styles = getBlock("styles")

//- Highlight.js
- scripts.add(["//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/highlight.min.js"])
- styles.add(["//cdn.rawgit.com/isagalaev/highlight.js/fb9baf8c32f968283d5b3af0d8995f9a8b628c4c/src/styles/zenburn.css"])

//- jQuery
- scripts.add(["//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"])

//- Bootstrap
- scripts.add([getBootstrapUrl("js/bootstrap.min.js")])
- styles.add([getUrl("/styles/bootstrap.min.css")])

//- Modernizr
- scripts.add(["//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"])

//- User
- styles.add([getUrl("/styles/style.css")])
- scripts.add([getUrl("/scripts/script.js")])

//- Document
- scripts.add(document.scripts || [])
- styles.add(document.styles || [])

doctype html
html(lang="en")
  head
    != partial("meta", {site:site, metaBlock:getBlock("meta")})

    title= getTitle()

    //if lt IE 9
      script(async src="http://html5shim.googlecode.com/svn/trunk/html5.js")

    != styles.toHTML()
  body
    a(href=site.ghSource.url)
      img.gh-ribbon(src=site.ghSource.ribbon, alt="Fork me on GitHub", data-canonical-src=site.ghSource.ribbonData)

    .container
      section#content.content!= content
      hr
      footer
        div &copy; #{site.author} #{site.date.getFullYear()}

    != scripts.toHTML()
